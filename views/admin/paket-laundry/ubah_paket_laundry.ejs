<%- include("../../partials/header.ejs") %> <%- include("../../partials/navbar.ejs") %> <%- include("../../partials/sidebar.ejs") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ubah Paket Laundry</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/paket-laundry">Paket Laundry</a></li>
            <li class="breadcrumb-item active">Ubah Paket Laundry</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- <div class="card-header"></div> -->
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row">
                <!-- left column -->
                <div class="col">
                  <!-- general form elements -->
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Form Ubah Paket Laundry</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/paket-laundry/ubah/<%= paketLaundry._id %>?_method=PUT" method="post">
                      <div class="card-body">
                        <div class="form-group">
                            <label for="name">Nama Paket</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Masukkan nama paket ..." required value="<%= paketLaundry.name %>" />
                        </div>
                        <div class="form-group">
                            <label for="waktuKerja">Waktu Kerja</label>
                            <input type="text" class="form-control" name="waktuKerja" id="waktuKerja" placeholder="Masukkan waktu kerja ..." required value="<%= paketLaundry.waktuKerja %>" />
                        </div>
                        <div class="form-group">
                            <label for="harga">Harga/</label>
                            <input type="number" class="form-control" name="harga" id="harga" placeholder="Masukkan harga ..." required value="<%= parseInt(paketLaundry.harga).toLocaleString("id-ID") %>" />
                        </div>
                        
                      </div>
                      <!-- /.card-body -->
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                      </div>
                    </form>
                  </div>
                  <!-- /.card -->
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include("../../partials/footer.ejs") %> <%- include("../../partials/js.ejs") %>
